<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    tools:context=".ui.activity.MainActivity">

    <Button
        android:id="@+id/QQ_Share"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_action_shape"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户登录"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/design_default_color_primary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/QQ_Share"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:text="手机号："
        android:textSize="24sp"
        android:layout_marginTop="60dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        android:id="@+id/phone_edit"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密     码:"
        android:textSize="24sp"
        android:id="@+id/pass"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/pass_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/pass"
        app:layout_constraintLeft_toLeftOf="@id/phone_edit"
        app:layout_constraintRight_toRightOf="@id/phone_edit"
        app:layout_constraintBottom_toBottomOf="@id/pass"
        android:password="true"
        />
    <Button
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_action_eye"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/pass_edit"
        />
    <CheckBox
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pass"
        android:layout_marginTop="40dp"
        android:text="记住密码"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/automatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pass"
        android:layout_marginTop="40dp"
        android:text="自动登录"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:background="@drawable/selector_button_enable"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/remember"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/Asynchronous_login"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submit"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_action_name"
        />

</android.support.constraint.ConstraintLayout>